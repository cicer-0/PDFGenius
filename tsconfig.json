{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"rootDir": "./src",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
